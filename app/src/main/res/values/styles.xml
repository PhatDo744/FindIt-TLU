<resources>
    <!-- Các style chung -->
    <style name="SectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/section_title_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostTypeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="CustomOutlinedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/border_grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Các style cho trang cá nhân -->
    <style name="ProfileSectionHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProfileCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="ProfileMenuItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/primary_blue</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">56dp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <!-- Style để ẩn "viên thuốc" chỉ báo màu tím -->
        <item name="itemActiveIndicatorStyle">@style/CustomBottomNavIndicator</item>
        <item name="strokeColor">@color/background_gray</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!-- Đặt màu của chỉ báo thành trong suốt để ẩn nó đi -->
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="MyPostActionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minWidth">0dp</item> <!-- Vô hiệu hóa chiều rộng tối thiểu mặc định -->
        <item name="android:minHeight">0dp</item> <!-- Vô hiệu hóa chiều cao tối thiểu mặc định -->
        <item name="android:paddingStart">10dp</item> <!-- Giảm padding để nút gọn hơn -->
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="iconPadding">4dp</item> <!-- Giảm khoảng cách giữa icon và chữ -->
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MyPostTextActionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconSize">14dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Style cho chữ trên các tab -->
    <style name="MyPostsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Style cho chính sách -->
    <style name="PolicySectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/section_title_blue</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="PolicySectionContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="PolicySectionContent.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PolicyListItem" parent="PolicySectionContent">
        <item name="android:drawableStart">@drawable/ic_bullet_point</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <!-- Style mới cho danh sách có thứ tự (không có dấu đầu dòng) -->
    <style name="PolicyListItem.Ordered">
        <item name="android:drawableStart">@null</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <!-- Style cho màn hình Trợ giúp -->
    <style name="HelpTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>

    <style name="HelpDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="HelpSectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="HelpContactTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
    </style>

    <style name="HelpContactItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HelpContactIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/circle_background_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_large</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="HelpContactTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HelpContactLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="HelpContactValue" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TopRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.NegativeButton</item>
    </style>

    <style name="AlertDialog.PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/lost_red</item>
    </style>

    <style name="AlertDialog.NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
